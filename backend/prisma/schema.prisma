generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DeviceData {
  id          Int      @id @default(autoincrement())
  temperature Float
  humidity    Float
  lux         Float
  moisture    Int
  relay       Int
  receivedAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("device_data")
}
